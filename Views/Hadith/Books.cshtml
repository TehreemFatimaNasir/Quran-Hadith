@model IEnumerable<WebApplication5.Models.HadithBook>

@{
    ViewData["Title"] = "Books";
}

<h2>Hadith Books</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Book Name</th>
            <th>Writer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.BookName</td>
                <td>@book.WriterName</td>
                <td>
                    <a href="@Url.Action("Chapters", "Hadith", new { bookSlug = book.BookSlug })" class="btn btn-primary">View Chapters</a>
                </td>
            </tr>
        }
    </tbody>
</table>